{% extends 'base.html.twig' %}

{% block body %}
    <h1>Cargo</h1>

    <table>
        <tbody>
            <tr>
                <th>Descripcion</th>
                <td>{{ cargo.descripcion }}</td>
            </tr>
            <tr>
                <th>Idcargo</th>
                <td>{{ cargo.idcargo }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('cargo_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('cargo_edit', { 'idcargo': cargo.idcargo }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
