{% extends 'base.html.twig' %}

{% block body %}
    <h1>Cargos list</h1>

    <table border="1">
        <thead>
            <tr>
                <th>Descripcion</th>
                <th>Idcargo</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for cargo in cargos %}
            <tr>
                <td><a href="{{ path('cargo_show', { 'idcargo': cargo.idcargo }) }}">{{ cargo.descripcion }}</a></td>
                <td>{{ cargo.idcargo }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('cargo_show', { 'idcargo': cargo.idcargo }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('cargo_edit', { 'idcargo': cargo.idcargo }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('cargo_new') }}">Create a new cargo</a>
        </li>
    </ul>
{% endblock %}
